Include ~/.colima/ssh_config
Include ~/.ssh/config.local

# See https://gist.github.com/Tamal/1cc77f88ef3e900aeae65f0e5e504794
Host github.com
  Hostname ssh.github.com
  Port 443

Host *
    UseKeychain yes
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_rsa

