# mkdir -p ~/tmp/ssh_mount && rclone nfsmount <remote>:/home/user ~/tmp/ssh_mount
#
# Mounting a directory using sshfs
# mkdir -p ~/tmp/ssh_mount && sshfs user@host:/home/user ~/tmp/ssh_mount
